<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/home_feature_item"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/home_feature_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_cancel_black_24dp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_feature_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/loadimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_feature_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="Tomato "
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/home_feature_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="grams"
                        android:textColor="#C6AAAAAA"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_forward" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_feature_actual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line"
                        android:hint="@string/rs_45"
                        android:padding="3sp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/home_feature_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="RS  45"
                        android:minLines="1"
                        android:padding="3sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:textColorHint="@android:color/holo_red_dark"
                        android:textStyle="bold" />

                </LinearLayout>


                <!--                <TextView-->
                <!--                    android:id="@+id/home_feature_quantity"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="grams"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    android:layout_alignParentStart="true"-->
                <!--                    android:textColor="#C6AAAAAA"-->
                <!--                    android:textSize="16sp" />-->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <RelativeLayout
                        android:id="@+id/heart_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/home_feature_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/home_feature_fev"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_fav_unselect"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cartrelative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/heart_relative">

                        <Button
                            android:id="@+id/home_feature_addcart"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"

                            android:background="@drawable/shape_btn"
                            android:text="Add To cart"
                            android:textColor="@android:color/white"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/home_feature_plusminusView"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/shape_item"
                            android:padding="10sp"
                            android:visibility="gone">


                            <ImageView
                                android:id="@+id/home_feature_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="10sp"
                                android:background="@drawable/ic_delete" />

                            <TextView
                                android:id="@+id/home_feature_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5sp"
                                android:layout_marginEnd="5sp"
                                android:text="22"
                                android:textAlignment="center"
                                android:textColor="@android:color/black" />

                            <ImageView
                                android:id="@+id/home_feature_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/ic_add_circle" />
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7AAAAAA"
        android:paddingTop="8dp" />
</LinearLayout>
