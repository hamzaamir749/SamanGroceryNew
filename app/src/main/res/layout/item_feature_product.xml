<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_feature_item"
    android:layout_width="170dp"
    android:layout_height="345dp"
    android:layout_marginHorizontal="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="5sp"
    app:cardCornerRadius="10sp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="10sp">

        <ImageView
            android:id="@+id/home_feature_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"

            android:background="@drawable/ic_cancel_black_24dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/home_feature_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/tomato" />

        <TextView
            android:id="@+id/home_feature_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Tomato"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_feature_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="RS  45"
                android:minLines="1"
                android:padding="3sp"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_feature_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6sp"
                android:background="@drawable/line"
                android:hint="@string/rs_45"
                android:padding="3sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/home_feature_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:padding="3sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3sp">

            <TextView
                android:id="@+id/home_feature_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_btn_start"
                android:backgroundTint="@android:color/holo_red_dark"
                android:paddingStart="8dp"
                android:paddingTop="3dp"
                android:paddingEnd="8dp"
                android:paddingBottom="3dp"
                android:text="10 % off"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/home_feature_fev"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="3sp"
                android:src="@drawable/ic_fav_unselect" />


        </RelativeLayout>


        <Button
            android:id="@+id/home_feature_addcart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_btn"
            android:fontFamily="@font/poppins_regular"
            android:text="Add To cart"

            android:textColor="@android:color/white"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/home_feature_plusminusView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_item"
            android:padding="5dp"
            android:visibility="gone">


            <ImageView
                android:id="@+id/home_feature_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:background="@drawable/ic_delete" />

            <TextView
                android:id="@+id/home_feature_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:text="22"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/home_feature_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_add_circle" />

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>