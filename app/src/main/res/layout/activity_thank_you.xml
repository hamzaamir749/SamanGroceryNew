<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".ThankYouActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:background="@drawable/img_gif"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you!\n Your order will arrive soon"
        android:textSize="14sp"
        android:textAlignment="center"
        />



    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:background="@drawable/reciept"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/thanku_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RS 2450"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/thanku_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_btn_start"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20sp"
        android:padding="5sp"
        />

</LinearLayout>